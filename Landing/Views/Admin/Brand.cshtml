@using Dal.Entity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
Layout = "_LayoutAdmin";
List<Brand> Category = ViewBag.Category;
}

@section link
{
<style>
    .modal{
        top: 80px;
    }
</style>
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">مدیریت محتوا صفحات برند</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Admin")">خانه</a>
                    </li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- /.col -->
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header p-2 d-flex justify-content-start">
                        <ul class="nav nav-pills">
                            <li class="nav-item">
                                <a class="nav-link active show" href="#activity" data-toggle="tab">برند ها</a>
                            </li>
                        </ul>
                        <div class="list-group list-group-unbordered mb-3 d-flex flex-row justify-content-center gap-5 m-3">
                            <div>
                                <b class="p-3">تعداد برند</b> <a class="float-left"> @Category.Count()</a>
                            </div>
                        </div>
                    </div><!-- /.card-header -->
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="tab-pane active show" id="activity">
                                <form style="background-color:	rgb(220,220,220,0.4)" class="d-flex justify-content-around p-2"
                                      asp-action="InsertBrand" asp-controller="Admin" method="post" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">عنوان </label>
                                        <input name="title" class="form-control" id="exampleInputPassword1" required="required">
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputFile">لوگو</label>
                                        <div class="input-group">
                                            <div class="custom-file">
                                                <input name="logo" type="file" class="custom-file-input" id="exampleInputFile">
                                                <label class="custom-file-label" for="exampleInputFile">انتخاب فایل</label>
                                            </div>
                                        </div>
                                    </div>
                                 
                                    <div class="d-flex flex-column align-content-center justify-content-center ">
                                        <div class="form-input">
                                            <button type="submit" class="btn btn-primary">ثبت</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="card mt-3">
                                <div class="card-body p-0">
                                    <table class="table table-condensed">
                                        <tbody>
                                        <tr>
                                            <th class="text-center" style="width: 5%">id</th>
                                            <th class="text-center" style="width: 20%">عنوان</th>
                                            <th class="text-center" style="width: 25%">لوگو</th>
                                            <th class="text-center" style="width: 10%">#</th>
                                        </tr>
                                        @{
                                        if (Category.Count < 1)
                                        {
                                        <tr>
                                            <td> </td>
                                            <td> </td>
                                            <td class="text-center">
                                                یافت نشد

                                            </td>
                                        </tr>
                                        }
                                        else
                                        {
                                        foreach (var i in Category)
                                        {
                                        <tr>
                                            <td class="text-center">@i.Id</td>
                                            <td class="text-center">@i.Title</td>
                                            <td class="text-center">
                                                <img src="/Images/Brand/@i.Logo" width="50" alt=""/>
                                            </td>
                                            <td class="text-center">
                                                <form>
                                                    <a class="badge bg-warning text-muted modalProduct" href="@Url.Action("DeleteBrand", "Admin", new { @i.Id })">حذف</a>
                                                </form>
                                            </td>
                                        </tr>
                                        }
                                        }
                                        }
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.card-body -->
                            </div>
                        </div>
                    </div><!-- /.card-body -->
                </div>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>


@section script{

<script>
   
    $('#Image').on('change', function(event) {
        var input = event.target;
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function(e) {
                $('#LogoEdit').attr('src', e.target.result).show();
            }
            reader.readAsDataURL(input.files[0]);
        }
    });
</script>

}