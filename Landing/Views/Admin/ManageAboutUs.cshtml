@using Dal.Entity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_LayoutAdmin";
    List<OurService> ourServices = ViewBag.OurServices;
}

@section link
{
    <style>
    .modal{
        top: 80px;
    }
</style>
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">مدیریت محتوا درباره ما </h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Admin")">خانه</a>
                    </li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<section class="content">
    <div class="container-fluid">
        <div class="row">

            <!-- /.col -->
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header p-2 d-flex justify-content-start">
                        <ul class="nav nav-pills">
                            <li class="nav-item">
                                <a class="nav-link active show" href="#activity" data-toggle="tab">درباره ما</a>
                            </li>
                        </ul>

                    </div><!-- /.card-header -->
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="tab-pane active show" id="activity">

                            </div>
                            <div class="card mt-3">

                                <div class="card-body p-0">
                                    <table class="table table-condensed">
                                        <tbody>
                                        <tr>
                                            <th class="text-center" style="width: 5%">id</th>
                                            <th class="text-center" style="width: 25%">عنوان فارسی</th>
                                            <th class="text-center" style="width: 25%">عنوان انگلیسی</th>
                                            <th class="text-center" style="width: 35%">لوگو</th>
                                            <th class="text-center" style="width: 10%">#</th>
                                        </tr>
                                        @foreach (var i in ourServices)
                                        {
                                            <tr>
                                                <td class="text-center">@i.Id</td>
                                                <td class="text-center">@i.SecTitle</td>
                                                <td class="text-center">@i.SecTitleEn</td>
                                                <td class="text-center">
                                                    <img src="/Images/Logo/@i.ServiceLogo" width="44px"/>
                                                </td>
                                                <td class="text-center">
                                                    <form>
                                                        <a class="badge bg-warning text-muted " href="@Url.Action("AboutUsDetail", "Admin", new { id = @i.Id })">مشاهده</a>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.card-body -->
                            </div>
                        </div>
                    </div><!-- /.card-body -->
                </div>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>


@section script{

    <script>


    $('#Image').on('change', function(event) {
        var input = event.target;
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function(e) {
                $('#LogoEdit').attr('src', e.target.result).show();
            }
            reader.readAsDataURL(input.files[0]);
        }
    });
</script>

}