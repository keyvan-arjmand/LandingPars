@using Dal.Entity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
Layout = "_LayoutAdmin";
List<Message> contact = ViewBag.Contact;
}

@section link
{
<style>
    .modal{
        top: 80px;
    }
</style>
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">پیام ها</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Admin")">خانه</a>
                    </li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<section class="content">
    <div class="container-fluid">
        <div class="row">

            <!-- /.col -->
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header p-2 d-flex justify-content-start">
                        <ul class="nav nav-pills">
                            <li class="nav-item">
                                <a class="nav-link active show" href="#activity" data-toggle="tab">پیام ها</a>
                            </li>
                        </ul>

                    </div><!-- /.card-header -->
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="card mt-3">
                                <form asp-action="ManageContact" asp-controller="Admin" method="post">
                                    <div class="input-group p-3  m-2 w-50">
                                        <input type="text" class="form-control " name="search" style="border-radius: 0px 5px 5px 0px; !important;" placeholder="جستجو">
                                        <button class="input-group-text" type="submit" style=" border-radius: 5px 0px 0px 5px !important;cursor: pointer !important;">جستجو</button>
                                    </div>
                                </form>

                                <div class="card-body p-0">
                                    <table class="table table-condensed">
                                        <tbody>
                                        <tr>
                                            <th class="text-center" style="width: 5%">id</th>
                                            <th class="text-center" style="width: 20%">اسم</th>
                                            <th class="text-center" style="width: 15%">شماره</th>
                                            <th class="text-center" style="width: 15%">موضوع</th>
                                            <th class="text-center" style="width: 45%">پیام</th>
                                            <th class="text-center" style="width: 10%">#</th>
                                        </tr>
                                        @{
                                        if (contact.Count < 1)
                                        {
                                        <tr>
                                            <td> </td>
                                            <td> </td>
                                            <td class="text-center">
                                                یافت نشد

                                            </td>
                                        </tr>
                                        }
                                        else
                                        {
                                        foreach (var i in contact)
                                        {
                                        <tr>
                                            <td class="text-center">@i.Id</td>
                                            <td class="text-center">@i.Name</td>
                                            <td class="text-center">@i.Number</td>
                                            <td class="text-center">@i.Email</td>
                                            <td class="text-center">@i.Desc</td>
                                            <td class="text-center">
                                                <form>
                                                    <a class="badge bg-warning text-muted modalProduct" data-toggle="modal" data-target="#exampleModal1">مشاهده</a>
                                                    <input type="text" name="mId" class="mId" value="@i.Id" hidden="hidden"/>
                                                </form>
                                            </td>
                                        </tr>
                                        }
                                        }
                                        }
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.card-body -->
                            </div>
                        </div>
                    </div><!-- /.card-body -->
                </div>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>


@section script
{
<script>

    $(document).ready(function () {

        $(".modalProduct").click(function () {
            var currentrow = $(this).closest("form");

            $("#idP").val(currentrow.find($("input.mId[type=text]")).val());
            $("#Code").val(currentrow.find($("input.mCode[type=text]")).val());
            $("#Amount").val(currentrow.find($("input.mAmount[type=text]")).val());
            $("#Count").val(currentrow.find($("input.mCount[type=text]")).val());
        });

    });

</script>
}
