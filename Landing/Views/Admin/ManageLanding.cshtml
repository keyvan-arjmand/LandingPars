@using Dal.Entity
@model Landing.Models.LandingDto
@{
    Layout = "_LayoutAdmin";
    LandingPage landing = ViewBag.Landing;
}

@section link
{
    <style>
    .select2-container--default .select2-selection--multiple .select2-selection__choice {
        background-color: #007bff !important;
        color: #fff;
    }
img{width: fit-content}
    .select2-selection--multiple {
        min-width: 300px;
        max-width: 300px;
        float: right;
    }

    .ck-content {
        min-height: 200px;
        height: fit-content;
    }

    .image-container {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
    }

    .image-container img {
        max-width: 150px;
        height: auto;
    }

    .is-invalid {
        border: 2px solid red;
    }

    .text-overflow-cat-card {
        text-overflow: ellipsis;
        width: auto;
        overflow: hidden;
        text-wrap: normal;
        height: 60px;
        direction: rtl;
    }

    .select2-container--default .select2-selection--single {
        height: 40px;
    }
</style>
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">محتوا صفحه اصلی</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Admin")">خانه</a>
                    </li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<section class="content">
<div class="container-fluid">
    <div class="row">

        <!-- Profile Image -->

        <!-- /.col -->
        <div class="col-md-12">
            <div class="card">
                <div class="card-header p-2">
                    <ul class="nav nav-pills">
                        <li class="nav-item">
                            <a class="nav-link " href="#Sublanding" data-toggle="tab">صفحه اصلی</a>
                        </li>
                    </ul>
                </div><!-- /.card-header -->

                <form asp-action="UpdateLanding" asp-controller="Admin" enctype="multipart/form-data" class="tab-content">
                <div class="tab-pane p-5 active show" id="Sublanding">
                    <div class="card card-info card-outline mt-4">
                        <div class="card-header">
                            <h3 class="card-title">
                                <small class="h4">محتوا صفحه اصلی</small>
                            </h3>
                            <!-- tools box -->
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool btn-sm"
                                        data-widget="collapse"
                                        data-toggle="tooltip"
                                        title="Collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-tool btn-sm"
                                        data-widget="remove"
                                        data-toggle="tooltip"
                                        title="Remove">
                                    <i class="fa fa-times"></i>
                                </button>
                            </div>
                            <!-- /. tools -->
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <input id="Id" asp-for="id" value="@landing.Id" hidden="hidden"/>
                            <div class="p-2 m-3" style="background-color:	rgb(220,220,220,0.4)">
                                <div class="d-flex justify-content-between w-100">
                                    <div class="d-flex flex-column w-50">
                                        <label for="exampleInputPassword1">لوگو اصلی</label>
                                        <input type="file" asp-for="Logo" id="ImageSliderin" class="form-control">
                                    </div>
                                    <div class="d-flex flex-column w-50">
                                        <label for="exampleInputPassword1">شماره تماس</label>
                                        <input type="text" asp-for="Number" id="ImageSliderin" value="@landing.Number" class="form-control">
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between w-100">
                                    <div class="input-group p-3 w-100" style="justify-content: center;">
                                        <img src="/Images/Logo/@landing.Logo" id="ImageSlider" style="object-fit: cover;border-radius: 8px;width: 100%;max-width: 140px" class="imageOneP"/>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between w-100">
                                    <div class="d-flex flex-column w-50">
                                        <label for="exampleInputPassword1">بکگراند بخش اول سایت</label>
                                        <input type="file" asp-for="Sec1Image" id="ImageSliderin2" class="form-control">
                                    </div>
                                    <div class="input-group p-3 w-50 " style="justify-content: center;">
                                        <img src="/Images/banner/@landing.Sec1Image" id="ImageSlider2" style="object-fit: cover;border-radius: 8px;width: 100%;max-width: 140px" class="imageOneP"/>
                                        <img src="/Landing/assets/fonts/IranYekan/ttf/iranyekanwebregular.ttf" id="ImageSlider2" style="object-fit: cover;border-radius: 8px;width: 100%;max-width: 140px" class="imageOneP"/>
                                    </div>
                                </div>
                            </div>
                            <div class="p-2 m-3" style="background-color:	rgb(220,220,220,0.4)">
                                <div class=" m-2  p-3 w-100">
                                    <div class="d-flex justify-content-between gap-2">
                                        <div class="d-flex flex-column w-50">
                                            <label for="exampleInputPassword1">عنوان فارسی </label>
                                            <input asp-for="Sec1Title" value="@landing.Sec1Title" class="form-control" id="exampleInputPassword1">
                                        </div>
                                        <div class="d-flex flex-column w-50">
                                            <label for="exampleInputPassword1">عنوان انگلیسی</label>
                                            <input type="text" asp-for="Sec1TitleEn" value="@landing.Sec1TitleEn" id="SmallSideBannerin" title="test" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class=" m-2  p-3 w-100">
                                    <div class="d-flex justify-content-between gap-2">
                                        <div class="d-flex flex-column w-50">
                                            <label for="exampleInputPassword1">توضیحات کوتاه فارسی </label>
                                            <input asp-for="Sec1SubTitle" value="@landing.Sec1SubTitle" class="form-control" id="exampleInputPassword1">
                                        </div>
                                        <div class="d-flex flex-column w-50">
                                            <label for="exampleInputPassword1">توضیحات کوتاه انگلیسی </label>
                                            <input type="text" asp-for="Sec1SubTitleEn" value="@landing.Sec1SubTitleEn" id="SmallSideBannerin" title="test" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class=" m-2  p-3 w-100">
                                    <div class="d-flex justify-content-between gap-2">
                                        <div class="d-flex flex-column w-50">
                                            <label for="exampleInputPassword1">توضیحات فارسی </label>
                                            <input asp-for="Sec1Desc" value="@landing.Sec1Desc" class="form-control" id="exampleInputPassword1">
                                        </div>
                                        <div class="d-flex flex-column w-50">
                                            <label for="exampleInputPassword1">توضیحات انگلیسی </label>
                                            <input type="text" asp-for="Sec1DescEn" value="@landing.Sec1DescEn" id="SmallSideBannerin" title="test" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class=" m-2  p-3 w-100">
                                    <div class="d-flex justify-content-between gap-2">
                                        <div class="d-flex flex-column w-50">
                                            <label for="exampleInputPassword1">عنوان فارسی بخش دوم </label>
                                            <input asp-for="Sec2Title" value="@landing.Sec2Title" class="form-control" id="exampleInputPassword1">
                                        </div>
                                        <div class="d-flex flex-column w-50">
                                            <label for="exampleInputPassword1">عنوان انگلیسی بخش دوم </label>
                                            <input type="text" asp-for="Sec2TitleEn" value="@landing.Sec2TitleEn" id="SmallSideBannerin" title="test" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class=" m-2  p-3 w-100">
                                    <div class="d-flex justify-content-between gap-2">
                                        <div class="d-flex flex-column w-50">
                                            <label for="exampleInputPassword1">توضیحات فارسی همکاری</label>
                                            <input asp-for="DescCart" value="@landing.DescCart" class="form-control" id="exampleInputPassword1">
                                        </div>
                                        <div class="d-flex flex-column w-50">
                                            <label for="exampleInputPassword1">توضیحات انگلیسی همکاری</label>
                                            <input type="text" asp-for="DescCartEn" value="@landing.DescCartEn" id="SmallSideBannerin" title="test" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card card-info card-outline mt-4">
                        <div class="card-header">
                            <h3 class="card-title">
                                <small class="h4">مدیریت سئو </small>
                            </h3>
                            <!-- tools box -->
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool btn-sm"
                                        data-widget="collapse"
                                        data-toggle="tooltip"
                                        title="Collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-tool btn-sm"
                                        data-widget="remove"
                                        data-toggle="tooltip"
                                        title="Remove">
                                    <i class="fa fa-times"></i>
                                </button>
                            </div>
                            <!-- /. tools -->
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body" style="background-color:	rgb(220,220,220,0.4)">
                            <div class="d-flex justify-content-between flex-nowrap gap-3 align-items-center">
                                <div class="form-group w-50 p-3" id="">
                                    <label>عنوان</label>
                                    <input id="SeoTitle" asp-for="SeoIndexTitle" value="@landing.SeoIndexTitle" type="text" class="form-control">
                                </div>
                                <div class="form-group w-50 p-3" id="">
                                    <label>آدرس متعارف</label>
                                    <input id="SeoCanonical" type="text" asp-for="SeoIndexCanonical" value="@landing.SeoIndexCanonical" class="form-control">
                                </div>
                            </div>
                            <div class="d-flex justify-content-between flex-nowrap gap-3 align-items-center">
                                <div class="form-group w-50 p-3" id="">
                                    <label>توضیحات</label>
                                    <textarea id="SeoDesc"   asp-for="SeoIndexDesc" class="form-control">@Html.Raw(landing.SeoIndexDesc)</textarea>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between flex-nowrap gap-3 align-items-center">
                                <div class="form-group w-50 p-3" id="">
                                    <label>عنوان انگلیسی</label>
                                    <input id="" asp-for="SeoIndexTitleEn" value="@landing.SeoIndexTitleEn" type="text" class="form-control">
                                </div>
                                <div class="form-group w-50 p-3" id="">
                                    <label>توضیحات انگلیسی</label>
                                    <textarea id="seerr"   asp-for="SeoIndexDescEn" class="form-control">@Html.Raw(landing.SeoIndexDescEn)</textarea>
                                </div>
                            </div>
                            <div class="d-flex justify-content-center flex-nowrap gap-3 align-items-center mt-3">
                                <div class="form-input w-100">
                                    <button type="submit" class="btn btn-primary">
                                        ثبت
                                    </button>
                                </div>
                            </div>
                        </div>
            
                    </div>
                </div>
              
                </form>
            </div>
        </div>
    </div><!-- /.card-body -->
</div>
</section>

@section script{
    <script>
        $('#ImageSliderin').on('change', function(event) {
            var input = event.target;
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    $('#ImageSlider').attr('src', e.target.result).show();
                }
                reader.readAsDataURL(input.files[0]);
            }
        });
        $('#ImageSliderin2').on('change', function(event) {
            var input = event.target;
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    $('#ImageSlider2').attr('src', e.target.result).show();
                }
                reader.readAsDataURL(input.files[0]);
            }
        });
        $('#ImageSliderin3').on('change', function(event) {
            var input = event.target;
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    $('#ImageSlider3').attr('src', e.target.result).show();
                }
                reader.readAsDataURL(input.files[0]);
            }
        });
        $('#ImageSliderin4').on('change', function(event) {
            var input = event.target;
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    $('#ImageSlider4').attr('src', e.target.result).show();
                }
                reader.readAsDataURL(input.files[0]);
            }
        });
        $('#ImageSliderin5').on('change', function(event) {
            var input = event.target;
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    $('#ImageSlider5').attr('src', e.target.result).show();
                }
                reader.readAsDataURL(input.files[0]);
            }
        });
        $('#SeoDesc').val(`@Html.Raw(landing.SeoIndexDesc)`);
        $('#seerr').val(`@Html.Raw(landing.SeoIndexDescEn)`);
    </script>
    <script src="https://cdn.ckeditor.com/4.16.2/standard/ckeditor.js"></script>
}