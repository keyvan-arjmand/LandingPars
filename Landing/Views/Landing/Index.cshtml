    </a
    >
}

<div
    class="optech-breadcrumb"
    style="background-image: url(./landing/assets/images/breadcrumb/breadcrumb.png)">
    <div class="container">
        <h1 class="post__title">@page1.Title</h1>
        <nav class="breadcrumbs">
            <ul>
                <li>
                    <a href="@Url.Action("Index", "Home")">خانه</a>
                </li>
                <li aria-current="page">@page1.Title</li>
            </ul>
        </nav>
    </div>
</div>
<!-- End breadcrumb -->
<div class="section optech-section-padding">
    <div class="container">
        <div class="row">
            @Html.Raw(page1.Desc)
        </div>
    </div>
</div>
}
