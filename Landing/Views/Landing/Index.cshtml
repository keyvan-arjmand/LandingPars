@using System.Globalization
@using Dal.Entity
@{
    Layout = "_Layout";
    List<Category> categories = ViewBag.Cats;
    SubPage page1 = ViewBag.Page;
   
    LandingPage landingPage = ViewBag.Landing;
    if (CultureInfo.CurrentCulture.Name == "fa")
    {
        ViewData["Title"] = @page1.SeoTitle;
    }
    else
    {
        ViewData["Title"] = @page1.SeoTitleEn;
    }
}


@section HeadNumber2
    {
<a href="tel:@landingPage.Number" >
    <i class="ri-phone-fill"></i>@landingPage.Number
</a
>
}
@if (CultureInfo.CurrentCulture.Name == "fa")
{
    @section meta
    {
        <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"/>
        <meta name="description" content=@Html.Raw(page1.SeoTitle).ToString()/>
        <link rel="canonical" href=@Html.Raw(page1.SeoCanonical).ToString()/>
        <meta property="og:locale" content="fa_IR"/>
        <meta property="og:type" content="website"/>
        <meta property="og:title" content=@Html.Raw(page1.SeoTitle).ToString()/>
        <meta property="og:description" content=@Html.Raw(page1.SeoDesc).ToString()/>
        <meta property="og:url" content="https://parsme.com"/>
        <meta property="og:site_name" content=@Html.Raw(page1.SeoTitle).ToString()/>
        <meta property="og:image:width" content="1200"/>
        <meta property="og:image:height" content="760"/>
        <meta property="og:image:type" content="image/jpeg"/>
    }
@section DescCart
{
    <p>
        @landingPage.DescCart
    </p>
}

@section Header
{
    <ul class="site-menu-main">
        @{
            foreach (var i in categories)
            {
                string id = "submenu-" + i.Id;
                if (i.Pages.Count > 1)
                {
                    <li class="nav-item nav-item-has-children">
                        <a
                            class="nav-link-item drop-trigger"
                            href="@i.Href">
                            @i.Title
                            <i class="ri-arrow-down-s-fill">
                            </i
                            >
                        </a>
                        <ul class="sub-menu" id="@id">

                            @foreach (var q in i.Pages)
                            {
                                <li class="sub-menu--item">
                                    <a href="@q.Href">
                                        <span class="menu-item-text">
                                            @q.Title
                                        </span
                                        >
                                    </a>
                                </li>
                            }
                        </ul>

                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link-item" href="@i.Href">@i.Title</a>
                    </li>
                }
            }
        }
        <li class="nav-item d-block d-sm-block d-md-none d-lg-none">
            <a class="nav-link-item" href="@Url.Action("ChangeLanguage", "Language", new { culture = "fa" })">فارسی</a>
        </li>
        <li class="nav-item d-block d-sm-block d-md-none d-lg-none">
            <a class="nav-link-item" href="@Url.Action("ChangeLanguage", "Language", new { culture = "en" })">English</a>
        </li>
    </ul>
}
@section headLogo2
{
    <img
        alt=""
        class="light-version-logo"
        src="/Images/Logo/@landingPage.Logo"/>
}
@section headLogo
